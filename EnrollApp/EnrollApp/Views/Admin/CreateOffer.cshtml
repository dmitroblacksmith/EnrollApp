@model EnrollApp.Models.Offer

@{
    ViewData["Title"] = "CreateOffer";
}

<h1>Новая услуга</h1>

<form method="post">
    <div class="form-group col-sm-4">
        <h5 class="col-form-label">Название</h5>
        <input type="text" class="form-control" asp-for="Title" />
    </div>
    <div class="form-group col-sm-8">
        <h5 class="col-form-label">Описание</h5>
        <textarea class="form-control" rows="5"  asp-for="Description" ></textarea>
    </div>
    <div class="form-group col-sm-4">
        <h5 class="col-form-label">Цена</h5>
        <input type="text" class="form-control" asp-for="Price" />
    </div>
    <input type="submit" value="Сохранить" class="btn btn-primary"/>
</form>

