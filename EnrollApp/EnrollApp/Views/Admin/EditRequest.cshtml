@model EnrollApp.ViewModels.EditRequestViewModel

@{
    ViewData["Title"] = $"Запрос {Model.ClientRequest.Id}";
}

<h1>@($"Запрос {Model.ClientRequest.Id}")</h1>

<form method="post">
    <input type="hidden" asp-for="ClientRequest.Id" />
    <input type="hidden" asp-for="ClientRequest.ClientId" />
    <input type="hidden" asp-for="ClientRequest.OfferId" />
    <input type="hidden" asp-for="ClientRequest.Question" />
    <div class="form-row">
        <div class="form-group col-sm-4">
            <h5 class="col-form-label">Имя</h5>
            <input type="text" readonly class="form-control-plaintext" asp-for="ClientRequest.Client.Name" />
        </div>
        <div class="form-group col-sm-4">
            <h5 class="col-form-label">Номер телефона</h5>
            <input type="text" readonly class="form-control-plaintext" asp-for="ClientRequest.Client.Phone" />
        </div>
        <div class="form-group col-sm-4">
            <h5 class="col-form-label">Email</h5>
            <input type="text" readonly class="form-control-plaintext" asp-for="ClientRequest.Client.Email" />
        </div>
    </div>
    <div class="form-group">
        <h5 class="col-form-label">Тема</h5>
        <input type="text" readonly class="form-control-plaintext" asp-for="ClientRequest.Offer.Title" />
    </div>
    <div class="form-group">
        <h5 class="col-form-label">Статус</h5>
        <select id="requestState" asp-for="ClientRequest.ClientRequestStateId" asp-items="Model.RequestStates"
                class="form-control"></select>
    </div>
    <h5 class="col-form-label">Вопрос</h5>
    <input type="text" readonly class="form-control-plaintext" asp-for="ClientRequest.Question" /><br />
    <input type="submit" value="Сохранить" class="btn  btn-primary"/>
</form>