@model EnrollApp.ViewModels.ClientRequestViewModel
@{
    ViewData["Title"] = "EnglishGo";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>EnglishGo</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Condensed&display=swap" rel="stylesheet">
</head>
<body class="parallax" style="background-image: url('img/5.jpg');" onload="checkModel()">
    <style>
        .btn-round {
            border-radius: 50px;
        }
    </style>
    <div class="d-flex flex-column col-12 justify-content-center">
        <div class="d-flex justify-content-center align-items-center py-md-2 fixed-top nav-bar-fixed shadow bg-white">
            <div class="px-md-2">
                <button id="about-button" type="button" class="btn btn-outline-danger btn-round" onclick="showabout()">О нас</button>
            </div>
            <div class="px-md-2">
                <button type="button" class="btn btn-outline-danger btn-round" onclick="showprices()">Тарифы</button>
            </div>
            <div class="px-md-2" style="width: 5%;">
                <a href="#">
                    <img src="img/round_logo.png" style="width: 100%;" />
                </a>
            </div>
            <div class="px-md-2">
                <button type="button" class="btn btn-outline-danger btn-round" onclick="showcontacts()">Контакты</button>
            </div>
            <div class="px-md-2">
                <button type="button" class="btn btn-outline-danger btn-round" onclick="showapplyform()">Запись</button>
            </div>
        </div>
        <div class="landing-content d-flex flex-column pt-6 justify-content-center">
            <div class="welcome-panel d-flex col-10 offset-1 align-items-center shadowed">
                <div class="welcome-text d-flex flex-column col-7">
                    <div class="title d-flex">
                        <div>ENGLISHGO</div>
                    </div>
                    <div class="sutitle1">
                        Школа английского языка
                    </div>
                    <div>
                        <button type="button" class="btn btn-outline-dark btn-round" onclick="showabout()">Подробнее о нас</button>
                    </div>
                </div>
                <div class="welcome-img " style="background-image: url('img/school.svg');">
                </div>
            </div>

            <div id="about-panel" class="about-panel d-flex col-10 offset-1 pt-5 flex-column">
                <div class="title text-center">О нас</div>
                <div class="about-cards d-flex">
                    <div class="about-card d-flex shadowed flex-column">
                        <div class="about-img about-img1" style="background-image: url('img/library.svg');"></div>
                        <div class="sutitle2 text-center">Собственная программа</div>
